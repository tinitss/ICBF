@page
@model ICBFApp.Pages.Ninos.EditModel
@{
    ViewData["Title"] = "Editar Niño";
}

<h2>Editar Niño</h2>

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.errorMessage
    </div>
}

<form method="post">
    <input type="hidden" asp-for="ninoInfo.pkIdNino" />
    <div class="form-group">
        <label>NIUP</label>
        <input type="text" class="form-control" asp-for="ninoInfo.niup">
    </div>
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" class="form-control" asp-for="ninoInfo.nombre">
    </div>
    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input type="date" class="form-control" asp-for="ninoInfo.fechaNacimiento">
    </div>
    <div class="form-group">
        <label>Tipo de Sangre</label>
        <select class="form-control" asp-for="ninoInfo.tipoSangre">
            <option value="A">A</option>
            <option value="O">O</option>
            <option value="B">B</option>
            <option value="AB">AB</option>
        </select>
    </div>
    <div class="form-group">
        <label>Ciudad de Nacimiento</label>
        <input type="text" class="form-control" asp-for="ninoInfo.ciudadNacimiento">
    </div>
    <div class="form-group">
        <label>EPS</label>
        <select class="form-control" asp-for="ninoInfo.fkIdEps">
            @foreach (var eps in Model.epsInfo)
            {
                <option value="@eps.pkIdEps" selected="@((eps.pkIdEps == Model.ninoInfo.fkIdEps))">@eps.nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Jardín</label>
        <select class="form-control" asp-for="ninoInfo.fkIdJardin">
            @foreach (var jardin in Model.jardinInfo)
            {
                <option value="@jardin.pkIdJardin" selected="@((jardin.pkIdJardin == Model.ninoInfo.fkIdJardin))">@jardin.nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Usuario</label>
        <select class="form-control" asp-for="ninoInfo.fkIdUsuario">
            @foreach (var usuario in Model.usuarioInfo)
            {
                <option value="@usuario.pkIdUsuario" selected="@((usuario.pkIdUsuario == Model.ninoInfo.fkIdUsuario))">@usuario.nombre</option>
            }
        </select>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/TipoDoc/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>
